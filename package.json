{
  "version": "0.0.0",
  "name": "cn-shell-mono",
  "description": "Cloud Native Shell Monorepo",
  "lint-staged": {
    "**/src/**/*.ts": [
      "prettier --write",
      "git add"
    ],
    "**/*.{json,md,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "scripts": {
    "prep-husky": "npx husky install && npx husky add .husky/pre-commit 'npx lint-staged' && git add .husky/pre-commit"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "Black Eye Technology",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackeyetech/cn-shell-mono.git"
  },
  "bugs": {
    "url": "https://github.com/blackeyetech/cn-shell-mono/issues"
  },
  "homepage": "https://github.com/blackeyetech/cn-shell-mono#readme",
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2"
  }
}
